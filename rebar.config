{ erl_opts, [
    debug_info
]}.

{ deps, [
    {amoc, "3.0.0"},
    {escalus, "4.2.7"},
    {fast_scram, "0.6.0"},
    {jiffy, "1.1.1"},
    {fusco, "0.1.1"}
]}.

{overrides,
  [
    {override, fast_scram, [{erl_opts, [{d, 'WITHOUT_NIFS'}]}, {deps, []}]}
  ]
}.

{ xref_checks, [
    %% enable most checks, but avoid 'unused calls' which makes amoc-arsenal fail...
    undefined_function_calls, undefined_functions, locals_not_used,
    deprecated_function_calls, deprecated_functions
]}.

{ dialyzer, [
    {plt_extra_apps, [amoc]}
]}.

{ relx, [
    {release, {amoc_arsenal_xmpp, {git, short}}, [amoc_arsenal_xmpp, runtime_tools]},
    {debug_info, keep},
    {dev_mode, false},
    {extended_start_script, true},
    {sys_config, "rel/app.config"}
  ]}.
